<Window x:Class="SQ_TeamClack_TermProj.addCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQ_TeamClack_TermProj"
        mc:Ignorable="d"
        Title="addCustomerWindow" Height="230" Width="300" ResizeMode="NoResize">
    <StackPanel>
        <TextBlock Text="Please fill out the following information" HorizontalAlignment="Center" FontSize="15"
                   Margin="12" FontFamily="Arial"/>
        <Label Content="Customer Name:" HorizontalAlignment="Center" FontSize="15" Margin="0,20,3,2"/>
        <TextBox x:Name="cusNameInput" Width="150" Height="20" HorizontalAlignment="Center" Margin="0,5"/>
        <Button x:Name="submit" Content="Submit" Width="60" Height ="30" Margin="0,25" Click="submit_Click"/>
    </StackPanel>
</Window>
